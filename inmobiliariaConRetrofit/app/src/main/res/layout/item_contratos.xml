<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#009688"
    app:cardCornerRadius="30dp"
    app:cardElevation="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/imgInmuebleContratos"
            android:layout_width="150dp"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.21"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txDireccionContratos"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:background="@drawable/archivos"
            android:paddingTop="16dp"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgInmuebleContratos"
            app:layout_constraintVertical_bias="0.534" />

        <Button
            android:id="@+id/btVerContratos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#009688"
            android:shadowColor="#673AB7"
            android:text="Ver"
            android:textColor="#000000"
            android:textColorHint="#009688"
            app:layout_constraintBottom_toBottomOf="@+id/txDireccionContratos"
            app:layout_constraintEnd_toEndOf="@+id/txDireccionContratos"
            app:layout_constraintStart_toStartOf="@+id/txDireccionContratos"
            app:layout_constraintTop_toTopOf="@+id/txDireccionContratos"
            app:layout_constraintVertical_bias="0.894"
            app:rippleColor="#673AB7" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>