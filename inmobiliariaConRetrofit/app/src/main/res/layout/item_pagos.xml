<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardBackgroundColor="#009688"
    app:cardCornerRadius="30dp"
    app:cardElevation="15dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="156dp">

        <TextView
            android:id="@+id/txCodigoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código pago:"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.135"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.110" />

        <TextView
            android:id="@+id/textCodigoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#06D0EA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.062"
            app:layout_constraintStart_toEndOf="@+id/txCodigoPago"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.122" />

        <TextView
            android:id="@+id/txNumeroPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Número de pago:"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txCodigoPago"
            app:layout_constraintVertical_bias="0.061" />

        <TextView
            android:id="@+id/textNumeroPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#06D0EA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toEndOf="@+id/txNumeroPago"
            app:layout_constraintTop_toBottomOf="@+id/textCodigoPago"
            app:layout_constraintVertical_bias="0.052" />

        <TextView
            android:id="@+id/txCodigoContratoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código de contrato:"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txNumeroPago"
            app:layout_constraintVertical_bias="0.110" />

        <TextView
            android:id="@+id/textCodigoContratoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#06D0EA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.059"
            app:layout_constraintStart_toEndOf="@+id/txCodigoContratoPago"
            app:layout_constraintTop_toBottomOf="@+id/textNumeroPago"
            app:layout_constraintVertical_bias="0.098" />

        <TextView
            android:id="@+id/txImportePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Importe:"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txCodigoContratoPago"
            app:layout_constraintVertical_bias="0.110" />

        <TextView
            android:id="@+id/textImportePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#06D0EA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintStart_toEndOf="@+id/txImportePago"
            app:layout_constraintTop_toBottomOf="@+id/textCodigoContratoPago"
            app:layout_constraintVertical_bias="0.133" />

        <TextView
            android:id="@+id/txFechaDePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha de pago:"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txImportePago" />

        <TextView
            android:id="@+id/textFechaDePago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#06D0EA"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toEndOf="@+id/txFechaDePago"
            app:layout_constraintTop_toBottomOf="@+id/textImportePago" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>